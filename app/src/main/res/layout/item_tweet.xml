<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/grid_2x"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_tweet_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        tools:text="user name" />

    <TextView
        android:id="@+id/text_tweet_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_tweet_username"
        android:layout_marginVertical="@dimen/grid_2x"
        android:textSize="24sp"
        tools:text="tweet content" />

    <ImageView
        android:id="@+id/image_tweet_content"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/text_tweet_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        tools:src="@drawable/retweet_inactive"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/text_tweet_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_tweet_content"
        android:layout_marginVertical="@dimen/grid_1x"
        tools:text="dateTime" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_tweet_date"
        android:layout_marginTop="@dimen/grid_2x"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linear_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_likes"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="@dimen/grid_2x"
                android:src="@drawable/like_inactive" />

            <TextView
                android:id="@+id/text_tweet_likes_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:text="20" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_retweets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_retweets"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/grid_2x"
                android:src="@drawable/retweet_inactive" />

            <TextView
                android:id="@+id/text_tweet_retweets_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:text="20" />
        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>
</RelativeLayout>