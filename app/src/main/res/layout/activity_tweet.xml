<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.tweet.TweetActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_add_tweet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/grid_3x"
        android:maxWidth="@dimen/standard_width"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_add_tweet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_new_tweet"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:scrollbars="vertical"
            tools:text="@string/lorem_ipsum" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_new_tweet"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_margin="@dimen/grid_3x"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_portrait"
        app:layout_constraintEnd_toEndOf="@+id/til_add_tweet"
        app:layout_constraintStart_toStartOf="@+id/til_add_tweet"
        app:layout_constraintTop_toBottomOf="@+id/til_add_tweet" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/bt_send_tweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/grid_3x"
        android:backgroundTint="@color/colorPrimary"
        android:contentDescription="@string/hint_new_tweet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_send" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/bt_add_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/grid_3x"
        android:backgroundTint="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@id/bt_send_tweet"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_camera" />

</androidx.constraintlayout.widget.ConstraintLayout>